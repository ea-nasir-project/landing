---
import BaseHead from "./BaseHead.astro";
import Schema from "./seo/Schema.astro";

interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
  publishedTime: string;
  author: string;
}

const { title, description, image, publishedTime, author } = Astro.props;
---

<BaseHead
  title={title}
  description={description}
  image={image}
  ogType="article"
  publishedTime={publishedTime}
  author={author}
  showRSS={true}
/>
<Schema
  type="article"
  data={{
    headline: title,
    description: description,
    image: image ? new URL(image.src, Astro.url).toString() : undefined,
    datePublished: publishedTime,
    author: {
      "@type": "Person",
      name: author,
    },
  }}
/>
