---
import Logo from "@images/logo/renova-main.svg";

interface Props {
  position?: "absolute" | "sticky";
}

const { position = "sticky" } = Astro.props;
const pathname = Astro.url.pathname;
const isHome = pathname === "/";

const headerClass = isHome
  ? `${position} inset-x-0 top-0 z-50`
  : `${position} inset-x-0 top-0 z-50 bg-emerald-950/90 backdrop-blur-md shadow-md transition-all duration-300`;

const linkClass = isHome
  ? "text-base/6 font-semibold text-emerald-100 hover:text-white transition-colors"
  : "text-base/6 font-semibold text-emerald-50 hover:text-white transition-colors";

const buttonClass = isHome
  ? "inline-flex items-center gap-x-1 text-base/6 font-semibold text-emerald-100 hover:text-white transition-colors"
  : "inline-flex items-center gap-x-1 text-base/6 font-semibold text-emerald-50 hover:text-white transition-colors";
---

<header class={headerClass}>
  <div class="max-w-5xl mx-auto">
    <nav
      aria-label="Global"
      class="flex items-center justify-between p-6 lg:px-8"
    >
      <div class="flex lg:flex-1">
        <a href="#" class="-m-1.5 p-1.5">
          <span class="sr-only">e-Renova</span>
          <img src={Logo.src} alt="e-Renova logo" class="h-14 w-auto" />
        </a>
      </div>
      <div class="flex lg:hidden">
        <button
          type="button"
          command="show-modal"
          commandfor="mobile-menu"
          class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-emerald-200"
        >
          <span class="sr-only">Abrir menu principal</span>
          <svg
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            data-slot="icon"
            aria-hidden="true"
            class="size-6"
          >
            <path
              d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </button>
      </div>
      <div class="hidden lg:flex lg:gap-x-12 lg:items-center">
        <a href="/sobre" class={linkClass}>Sobre</a>

        <!-- Dropdown Serviços -->
        <div class="relative group">
          <button class={buttonClass}>
            <span>Serviços</span>
            <svg
              viewBox="0 0 20 20"
              fill="currentColor"
              data-slot="icon"
              aria-hidden="true"
              class="-mr-1 size-4"
            >
              <path
                d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z"
                clip-rule="evenodd"
                fill-rule="evenodd"></path>
            </svg>
          </button>
          <div
            class="absolute -left-26 top-full z-10 mt-3 w-max opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200"
          >
            <div
              class="w-full overflow-hidden rounded-3xl bg-emerald-50 shadow-lg ring-1 ring-emerald-900/10"
            >
              <div class="p-4">
                <div
                  class="group/item relative flex gap-x-6 rounded-lg p-4 text-sm/6 hover:bg-emerald-100 transition-colors"
                >
                  <div class="flex-auto">
                    <a
                      href="/descarte-voluntario"
                      class="block font-semibold text-emerald-900"
                    >
                      Descarte Voluntário
                      <span class="absolute inset-0"></span>
                    </a>
                    <p class="mt-1 text-emerald-700">
                      Pontos de coleta para descarte
                    </p>
                  </div>
                </div>
                <div
                  class="group/item relative flex gap-x-6 rounded-lg p-4 text-sm/6 hover:bg-emerald-100 transition-colors"
                >
                  <div class="flex-auto">
                    <a
                      href="/compostagem-residencial"
                      class="block font-semibold text-emerald-900"
                    >
                      Compostagem Residencial
                      <span class="absolute inset-0"></span>
                    </a>
                    <p class="mt-1 text-emerald-700">
                      Soluções para compostagem em casa
                    </p>
                  </div>
                </div>
                <div
                  class="group/item relative flex gap-x-6 rounded-lg p-4 text-sm/6 hover:bg-emerald-100 transition-colors"
                >
                  <div class="flex-auto">
                    <a
                      href="/lojistas-e-parceiros"
                      class="block font-semibold text-emerald-900"
                    >
                      Lojistas e Parceiros
                      <span class="absolute inset-0"></span>
                    </a>
                    <p class="mt-1 text-emerald-700">
                      Parcerias para coleta em estabelecimentos
                    </p>
                  </div>
                </div>
                <div
                  class="group/item relative flex gap-x-6 rounded-lg p-4 text-sm/6 hover:bg-emerald-100 transition-colors"
                >
                  <div class="flex-auto">
                    <a
                      href="/empresas-e-industrias"
                      class="block font-semibold text-emerald-900"
                    >
                      Empresas e Indústrias
                      <span class="absolute inset-0"></span>
                    </a>
                    <p class="mt-1 text-emerald-700">
                      Logística reversa para grandes volumes
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <a href="/blog" class={linkClass}>Blog</a>
        <a
          href="https://wa.me/5511953562620?text=Ol%C3%A1%2C%20quero%20saber%20mais%20sobre%20os%20servi%C3%A7os%20da%20e-renova."
          class={linkClass}>Contato</a
        >
      </div>
      <!-- <div class="hidden lg:flex lg:flex-1 lg:justify-end">
        <a href="#" class="text-sm/6 font-semibold text-gray-900"
          >Log in <span aria-hidden="true">&rarr;</span></a
        >
      </div> -->
    </nav>
    <el-dialog>
      <dialog id="mobile-menu" class="backdrop:bg-transparent lg:hidden">
        <div tabindex="0" class="fixed inset-0 focus:outline-none">
          <el-dialog-panel
            class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white p-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
          >
            <div class="flex items-center justify-between">
              <a href="#" class="-m-1.5 p-1.5">
                <span class="sr-only">e-Renova</span>
                <img src={Logo.src} alt="" class="h-8 w-auto" />
              </a>
              <button
                type="button"
                command="close"
                commandfor="mobile-menu"
                class="-m-2.5 rounded-md p-2.5 text-emerald-800"
              >
                <span class="sr-only">Fechar menu</span>
                <svg
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  data-slot="icon"
                  aria-hidden="true"
                  class="size-6"
                >
                  <path
                    d="M6 18 18 6M6 6l12 12"
                    stroke-linecap="round"
                    stroke-linejoin="round"></path>
                </svg>
              </button>
            </div>
            <div class="mt-6 flow-root">
              <div class="-my-6 divide-y divide-gray-500/10">
                <div class="space-y-2 py-6">
                  <a
                    href="/sobre"
                    class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-emerald-900 hover:bg-emerald-100"
                    >Sobre</a
                  >

                  <!-- Serviços com submenu -->
                  <div class="-mx-3">
                    <div
                      class="block px-3 py-2 text-base/7 font-semibold text-emerald-900"
                    >
                      Serviços
                    </div>
                    <div class="pl-6 space-y-2">
                      <a
                        href="/descarte-voluntario"
                        class="block rounded-lg px-3 py-2 text-sm/6 text-emerald-700 hover:bg-emerald-100"
                        >Descarte Voluntário</a
                      >
                      <a
                        href="/compostagem-residencial"
                        class="block rounded-lg px-3 py-2 text-sm/6 text-emerald-700 hover:bg-emerald-100"
                        >Compostagem Residencial</a
                      >
                      <a
                        href="/lojistas-e-parceiros"
                        class="block rounded-lg px-3 py-2 text-sm/6 text-emerald-700 hover:bg-emerald-100"
                        >Lojistas e Parceiros</a
                      >
                      <a
                        href="/empresas-e-industrias"
                        class="block rounded-lg px-3 py-2 text-sm/6 text-emerald-700 hover:bg-emerald-100"
                        >Empresas e Indústrias</a
                      >
                    </div>
                  </div>

                  <a
                    href="/blog"
                    class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-emerald-900 hover:bg-emerald-100"
                    >Blog</a
                  >
                </div>
                <div class="py-6">
                  <a
                    href="https://wa.me/5511953562620?text=Ol%C3%A1%2C%20quero%20saber%20mais%20sobre%20os%20servi%C3%A7os%20da%20e-renova."
                    class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-emerald-900 hover:bg-emerald-100"
                    >Contato</a
                  >
                </div>
              </div>
            </div>
          </el-dialog-panel>
        </div>
      </dialog>
    </el-dialog>
  </div>
</header>
