---
import type { HTMLAttributes } from "astro/types";

interface Props {
  text: string;
  variant?: "teal" | "emerald" | "stone" | "cyan" | "amber" | "login";
  size?: "sm" | "md" | "lg" | "xl";
  href: string;
  class?: string;
}

const {
  text,
  variant = "emerald",
  size = "md",
  href,
  class: className,
} = Astro.props;
---

<a
  href={href}
  class:list={["btn", `btn--${variant}`, `btn--${size}`, className]}
>
  {text}
</a>

<style>
  @reference "../../styles/global.css";
  .btn {
    @apply flex items-center justify-center font-normal no-underline cursor-pointer border-0 w-fit mx-auto mt-12;
    /* font-family: $ff-headings (Assuming var(--font-barlow-condensed)) */
    font-family: var(--font-barlow-condensed);

    transition:
      border-color 0.2s,
      color 0.2s,
      background-color 0.2s cubic-bezier(0.165, 0.84, 0.44, 1),
      box-shadow 0.2s;
    background-image: radial-gradient(
      circle farthest-side at 50% -50%,
      #ffffff80,
      #0000
    );
    box-shadow:
      0 4px 4px #0003,
      0 1px 1px #0003,
      inset 0 0 0 1px #0000001a,
      inset 0 3px 2px -2px #ffffff80;
  }

  .btn:hover {
    box-shadow:
      0 6px 12px #0003,
      0 1px 1px #0003,
      inset 0 0 0 1px #0000001a,
      inset 0 3px 2px -2px #ffffff80;
  }

  .btn:focus-visible {
    outline-offset: 2px;
  }

  /* Sizes */
  .btn--md {
    /* Default based on provided SCSS first block */
    padding: 0.5em 1.5em;
    font-size: 1.125rem; /* 18px */
    line-height: 1.2;
    gap: 0.5em;
    border-radius: 0.75rem; /* $space-75 approx */
  }

  .btn--sm {
    padding: 0.25em 1em;
    font-size: 0.875rem; /* 14px */
    line-height: 1.2;
    gap: 0.35em;
    border-radius: 0.75rem;
  }

  .btn--lg {
    padding: 0.75em 2em;
    font-size: 1.25rem; /* 20px */
    gap: 0.6em;
    border-radius: 1rem; /* $space-100 */
  }

  .btn--xl {
    padding: 1em 2.5em;
    font-size: 1.35rem;
    gap: 0.75em;
    border-radius: 1.5rem; /* $space-150 */
  }

  /* Variants */

  /* Teal */
  .btn--teal {
    @apply bg-teal-400 text-teal-950;
  }
  .btn--teal:hover,
  .btn--teal:focus {
    @apply bg-teal-300 outline-teal-300;
    outline-width: 2px;
    outline-style: solid;
  }

  /* Emerald */
  .btn--emerald {
    @apply bg-emerald-400 text-emerald-950;
  }
  .btn--emerald:hover,
  .btn--emerald:focus {
    @apply bg-emerald-300 outline-emerald-300;
    outline-width: 2px;
    outline-style: solid;
  }

  /* Stone */
  .btn--stone {
    @apply bg-stone-400 text-stone-900;
  }
  .btn--stone:hover,
  .btn--stone:focus {
    @apply bg-stone-300 outline-stone-300;
    outline-width: 2px;
    outline-style: solid;
  }

  /* Cyan */
  .btn--cyan {
    @apply bg-cyan-400 text-cyan-950;
  }
  .btn--cyan:hover,
  .btn--cyan:focus {
    @apply bg-cyan-300 outline-cyan-300;
    outline-width: 2px;
    outline-style: solid;
  }

  /* Amber */
  .btn--amber {
    @apply bg-amber-400 text-amber-950;
  }
  .btn--amber:hover,
  .btn--amber:focus {
    @apply bg-amber-300 outline-amber-300;
    outline-width: 2px;
    outline-style: solid;
  }

  /* Login (using Teal for consistency with Header) */
  .btn--login {
    @apply bg-teal-500 text-teal-950 outline-teal-500;
    outline-width: 2px;
    outline-style: solid;
    outline-offset: 2px;
  }
  .btn--login:hover,
  .btn--login:focus {
    @apply bg-teal-400 text-teal-950 outline-teal-400;
    outline-width: 2px;
    outline-style: solid;
  }
</style>
