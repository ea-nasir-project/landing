---
import type { HTMLAttributes } from "astro/types";

interface Props {
  text: string;
  variant?: "teal" | "emerald" | "stone" | "cyan" | "amber" | "login";
  size?: "sm" | "md" | "lg" | "xl";
  href: string;
  class?: string;
}

const {
  text,
  variant = "emerald",
  size = "md",
  href,
  class: className,
} = Astro.props;
---

<a
  href={href}
  class:list={["btn", `btn--${variant}`, `btn--${size}`, className]}
>
  {text}
</a>

<style>
  .btn {
    @apply inline-flex items-center justify-center font-bold no-underline cursor-pointer border-0;
    /* font-family: $ff-headings (Assuming var(--font-barlow-condensed)) */
    font-family: var(--font-barlow-condensed);

    transition:
      border-color 0.2s,
      color 0.2s,
      background-color 0.2s cubic-bezier(0.165, 0.84, 0.44, 1),
      box-shadow 0.2s;
    background-image: radial-gradient(
      circle farthest-side at 50% -50%,
      #ffffff80,
      #0000
    );
    box-shadow:
      0 4px 4px #0003,
      0 1px 1px #0003,
      inset 0 0 0 1px #0000001a,
      inset 0 3px 2px -2px #ffffff80;
  }

  .btn:hover {
    box-shadow:
      0 6px 12px #0003,
      0 1px 1px #0003,
      inset 0 0 0 1px #0000001a,
      inset 0 3px 2px -2px #ffffff80;
  }

  .btn:hover,
  .btn:focus {
    outline-offset: 2px;
  }

  /* Sizes */
  .btn--md {
    /* Default based on provided SCSS first block */
    padding: 0.5em 1.5em;
    font-size: 1.125rem; /* 18px */
    line-height: 1.2;
    gap: 0.5em;
    border-radius: 0.75rem; /* $space-75 approx */
  }

  .btn--sm {
    padding: 0.25em 1em;
    font-size: 0.875rem; /* 14px */
    line-height: 1.2;
    gap: 0.35em;
    border-radius: 0.75rem;
  }

  .btn--lg {
    padding: 0.75em 2em;
    font-size: 1.25rem; /* 20px */
    gap: 0.6em;
    border-radius: 1rem; /* $space-100 */
  }

  .btn--xl {
    padding: 1em 2.5em;
    font-size: 1.35rem;
    gap: 0.75em;
    border-radius: 1.5rem; /* $space-150 */
  }

  /* Variants */
  /* Using Tailwind Theme colors via @apply or theme() if available, 
     falling back to standard tailwind colors for mapping */

  /* Green */
  .btn--green {
    @apply bg-green-400 text-green-900;
  }
  .btn--green:hover,
  .btn--green:focus {
    @apply bg-green-300 outline-green-300;
    outline-width: 2px;
    outline-style: solid;
  }

  /* Yellow */
  .btn--yellow {
    @apply bg-yellow-400 text-yellow-950; /* yellow-10 usually very dark */
  }
  .btn--yellow:hover,
  .btn--yellow:focus {
    @apply bg-yellow-300 outline-yellow-300;
    outline-width: 2px;
    outline-style: solid;
  }

  /* stone */
  .btn--stone {
    @apply bg-stone-400 text-stone-900;
  }
  .btn--stone:hover,
  .btn--stone:focus {
    @apply bg-stone-300 outline-stone-300;
    outline-width: 2px;
    outline-style: solid;
  }

  /* Blue */
  .btn--blue {
    @apply bg-blue-400 text-blue-900;
  }
  .btn--blue:hover,
  .btn--blue:focus {
    @apply bg-blue-300 outline-blue-300;
    outline-width: 2px;
    outline-style: solid;
  }

  /* Login */
  .btn--login {
    @apply bg-green-500 text-green-900 outline-green-500;
    outline-width: 2px;
    outline-style: solid;
    outline-offset: 2px;
  }
  .btn--login:hover,
  .btn--login:focus {
    @apply bg-green-400 text-green-900 outline-green-400;
    outline-width: 2px;
    outline-style: solid;
  }
</style>
