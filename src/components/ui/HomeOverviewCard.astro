---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="h-full">
  <div
    class="group flex h-full flex-col gap-6 py-6
           bg-green-200/50
           border border-green-900/10
           rounded-2xl
           shadow-sm
           transition-all duration-300
           hover:border-green-900/50
           hover:shadow-lg"
  >
    <div class="flex flex-col items-center p-8 text-center">
      <div
        class="mb-4 flex items-center justify-center
               w-16 h-16
               rounded-full
               text-emerald-500
               bg-green-200/90
               group-hover:bg-green-200 transition-transform duration-300 group-hover:scale-110"
        set:html={icon}
      />

      <h3 class="mb-2 text-2xl font-semibold text-emerald-700">{title}</h3>

      <p class="text-base leading-relaxed text-gray-600">
        {description}
      </p>
    </div>
  </div>
</div>
