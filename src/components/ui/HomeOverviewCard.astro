---
interface Props {
  title: string;
  description: string;
  icon: string;
  color?: string;
}

const { title, description, icon, color = "green-900" } = Astro.props;
---

<div class="h-full">
  <div
    class={`group h-full flex flex-col gap-4 py-4 bg-white border border-${color}/10 rounded-lg shadow-sm transition-all duration-300 hover:border-${color}/50 hover:shadow-lg`}
  >
    <div class="flex flex-col items-center p-8 text-center">
      <div
        class={`mb-4 flex items-center justify-center w-16 h-16 rounded-full bg-${color}/10 transition-colors duration-300 group-hover:bg-${color}/20`}
      >
        <div
          class={`w-8 h-8 text-${color} transition-transform duration-300 group-hover:scale-110`}
          set:html={icon}
        />
      </div>

      <h3 class="mb-2 font-barlow-condensed font-semibold text-2xl">
        {title}
      </h3>

      <p class="text-base text-gray-600 leading-relaxed m-0">
        {description}
      </p>
    </div>
  </div>
</div>
