---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  class?: string;
}

const { title, description, image, class: className } = Astro.props;
---

<div
  class:list={[
    "group relative flex flex-col w-full max-w-5xl justify-end min-h-[240px] p-8 rounded-2xl overflow-hidden shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-xl h-full",
    className,
  ]}
>
  <div class="w-full">
    <!-- Background Image -->
    <Image
      src={image}
      alt={title}
      class="absolute inset-0 w-full h-full object-cover z-0 transition-transform duration-500 group-hover:scale-105"
    />

    <!-- Gradient Overlay -->
    <div
      class="absolute inset-0 bg-linear-to-t from-black/90 via-black/55 to-black/10 z-10 transition-all duration-300 group-hover:from-black/95 group-hover:via-black/50 group-hover:to-black/20"
    >
    </div>

    <!-- Content -->
    <div class="relative z-20">
      <h4 class="text-white font-bold text-3xl mb-2 drop-shadow-md">
        {title}
      </h4>
      <p class="text-gray-200 text-lg leading-relaxed">
        {description}
      </p>
    </div>
  </div>
</div>
