---
interface Props {
  title: string;
  subtitle: string;
  description: string;
}

const { title, subtitle, description } = Astro.props;
---

<div class="group">
  <div class="flex items-start gap-4">
    <div
      class="w-1 h-[-webkit-fill-available] bg-linear-to-b from-emerald-700 to-emerald-300 rounded-full mt-1 group-hover:opacity-80 transition-opacity"
    >
    </div>
    <div>
      <h3
        class="text-3xl font-bold text-emerald-800 mb-2 group-hover:text-emerald-700 transition-colors"
      >
        {title}
      </h3>
      <span
        class="text-sm font-medium text-emerald-600 uppercase tracking-wide"
      >
        {subtitle}
      </span>
      <p class="text-lg text-gray-700 leading-relaxed pl-4 max-w-3xl mt-3">
        {description}
      </p>
    </div>
  </div>
</div>
