---
interface Props {
  title: string;
  lead?: string;
  class?: string;
  color?: string;
}

const { title, lead, class: className, color = "text-sky-950" } = Astro.props;
---

<div class="space-y-2 mb-6">
  <h3
    class:list={[
      "text-3xl md:text-4xl font-bold leading-tight max-w-4xl font-barlow text-balance",
      color,
      className,
    ]}
    set:html={title}
  />
  {lead && <p class="text-xl text-gray-700 leading-relaxed">{lead}</p>}
</div>
