---
interface Props {
  items: {
    question: string;
    answer: string;
  }[];
  color?: "emerald" | "stone" | "cyan" | "amber";
}

const { items, color = "emerald" } = Astro.props;

const colorMap = {
  emerald: {
    details: "border-emerald-100 hover:border-emerald-200",
    summary: "text-emerald-900 group-hover:text-emerald-700",
    icon: "bg-emerald-50 text-emerald-600 group-open:bg-emerald-100",
  },
  stone: {
    details: "border-stone-100 hover:border-stone-200",
    summary: "text-stone-900 group-hover:text-stone-700",
    icon: "bg-stone-50 text-stone-600 group-open:bg-stone-100",
  },
  cyan: {
    details: "border-cyan-100 hover:border-cyan-200",
    summary: "text-cyan-900 group-hover:text-cyan-700",
    icon: "bg-cyan-50 text-cyan-600 group-open:bg-cyan-100",
  },
  amber: {
    details: "border-amber-100 hover:border-amber-200",
    summary: "text-amber-900 group-hover:text-amber-700",
    icon: "bg-amber-50 text-amber-600 group-open:bg-amber-100",
  },
};

const theme = colorMap[color];
---

<div class="w-full space-y-1">
  {
    items.map((item) => (
      <details
        class={`group border rounded-2xl bg-white overflow-hidden transition-all duration-300 open:shadow-md ${theme.details}`}
      >
        <summary class="flex cursor-pointer items-center justify-between gap-4 p-6 list-none [&::-webkit-details-marker]:hidden">
          <h3 class={`text-lg font-medium transition-colors ${theme.summary}`}>
            {item.question}
          </h3>

          <span
            class={`shrink-0 rounded-full p-2 transition-all duration-300 group-open:rotate-180 ${theme.icon}`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="size-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                clip-rule="evenodd"
              />
            </svg>
          </span>
        </summary>

        <div class="px-6 pb-6 pt-0">
          <p class="text-gray-600 leading-relaxed">{item.answer}</p>
        </div>
      </details>
    ))
  }
</div>
