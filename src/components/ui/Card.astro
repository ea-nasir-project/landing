---
interface Props {
  title: string;
  description: string;
  icon: string;
  color: "emerald" | "stone" | "cyan" | "amber";
}

const { title, description, icon, color } = Astro.props;

const colorMap = {
  emerald: {
    bg: "bg-emerald-100/50",
    border: "border-emerald-200 hover:border-emerald-400",
    icon: "text-emerald-600 bg-emerald-200/70",
    title: "text-emerald-800",
  },
  stone: {
    bg: "bg-stone-100/50",
    border: "border-stone-200 hover:border-stone-400",
    icon: "text-stone-600 bg-stone-200/70",
    title: "text-stone-800",
  },
  cyan: {
    bg: "bg-cyan-100/50",
    border: "border-cyan-200 hover:border-cyan-400",
    icon: "text-cyan-600 bg-cyan-200/70",
    title: "text-cyan-800",
  },
  amber: {
    bg: "bg-amber-100/50",
    border: "border-amber-200 hover:border-amber-400",
    icon: "text-amber-600 bg-amber-200/70",
    title: "text-amber-800",
  },
};

const theme = colorMap[color];
---

<div class="h-full">
  <div
    class={`group flex items-center justify-center text-center h-full flex-col gap-4 p-6
           ${theme.bg}
           border ${theme.border}
           rounded-2xl
           shadow-sm
           transition-all duration-300
           hover:shadow-lg`}
  >
    <div
      class={`flex items-center justify-center
             w-14 h-14
             rounded-full
             ${theme.icon}
             transition-transform duration-300 group-hover:scale-110`}
      set:html={icon}
    />
    <h3 class={`text-xl font-semibold ${theme.title}`}>{title}</h3>
    <p class="text-base leading-relaxed text-gray-600">
      {description}
    </p>
  </div>
</div>
