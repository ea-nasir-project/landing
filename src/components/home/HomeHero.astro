---
import heroImage from "@/images/hero.webp";
---

<div class="relative isolate px-6 lg:px-8 min-h-screen">
  <!-- Background Image -->
  <div
    class="absolute inset-0 -z-2 bg-cover bg-center"
    style={`background-image: url(${heroImage.src});`}
  >
  </div>

  <!-- Gradient Overlay -->
  <div
    class="absolute inset-0 -z-1 bg-radial-[at_50%_75%] from-teal-800/70 via-teal-900/80 to-slate-950/90"
  >
  </div>

  <!-- Content -->
  <div
    class="mx-auto max-w-3xl min-h-screen flex flex-col justify-center pt-22 pb-20"
  >
    <!-- h1 Desktop -->
    <h1
      class="hidden sm:block text-7xl lg:text-8xl/20 font-semibold tracking-tight text-balance text-white drop-shadow-lg font-barlow-condensed animate-fade-up"
    >
      Transforme<br />
      seu <span class="text-gradient gradient-teal font-semibold tracking-tight"
        >lixo eletrônico</span
      ><br />
      em <span class="text-gradient gradient-sky font-semibold tracking-tight"
        >impacto positivo</span
      >
    </h1>

    <!-- h1 Mobile -->
    <h1
      class="block sm:hidden text-6xl/14 font-semibold tracking-tight text-balance text-white drop-shadow-lg font-barlow-condensed animate-fade-up"
    >
      Transforme<br />
      seu<br />
      <span class="text-gradient gradient-teal font-semibold tracking-tight"
        >lixo eletrônico</span
      ><br />
      em<br />
      <span class="text-gradient gradient-sky font-semibold tracking-tight"
        >impacto positivo</span
      >
    </h1>

    <p
      class="mt-8 text-xl md:text-2xl font-medium text-balance text-gray-100 drop-shadow-md animate-fade-up-delay"
    >
      Coleta e compra de equipamentos usados com segurança e praticidade
    </p>
  </div>
  <div class="absolute bottom-16 left-1/2 -translate-x-1/2 animate-bounce">
    <div
      class="w-6 h-10 rounded-full border-2 border-white/30 flex items-start justify-center pt-2"
    >
      <div class="w-1.5 h-3 bg-white/30 rounded-full"></div>
    </div>
  </div>
</div>
