---
import "@styles/global.css";
import type { ImageMetadata } from "astro";
import FallbackImage from "@images/wapp.png";

interface Props {
  title: string;
  description: string;
  image?: ImageMetadata | null;
  canonicalURL?: URL;
  ogType?: "website" | "article";
  publishedTime?: string;
  author?: string;
  showRSS?: boolean;
}

const {
  title,
  description,
  image = FallbackImage,
  ogType = "website",
  publishedTime,
  author,
  showRSS = false,
  canonicalURL = new URL(Astro.url.pathname, Astro.site),
} = Astro.props;
---

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-S1Q7VFLM14"
></script>

<script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    window.dataLayer.push(arguments);
  }
  gtag("js", new Date());
  gtag("config", "G-S1Q7VFLM14");
</script>

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="generator" content={Astro.generator} />

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="canonical" href={canonicalURL} />

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Barlow+Semi+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
  rel="stylesheet"
/>
{
  showRSS && (
    <link
      rel="alternate"
      type="application/rss+xml"
      title={title}
      href={new URL("rss.xml", Astro.site)}
    />
  )
}

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<meta property="og:type" content={ogType} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />

{image && <meta property="og:image" content={new URL(image.src, Astro.url)} />}

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />

{image && <meta name="twitter:image" content={new URL(image.src, Astro.url)} />}

{
  ogType === "article" && (
    <>
      <meta property="article:published_time" content={publishedTime} />
      <meta property="article:author" content={author} />
    </>
  )
}
