<style>
  footer::after {
    content: "";
    position: absolute;
    inset: 0;
    z-index: 0;
    opacity: 0.15;
    background-image:
      repeating-linear-gradient(
        45deg,
        transparent,
        transparent 40px,
        rgba(16, 185, 129, 0.3) 40px,
        rgba(16, 185, 129, 0.3) 80px
      ),
      repeating-linear-gradient(
        -45deg,
        transparent,
        transparent 40px,
        rgba(5, 150, 105, 0.3) 40px,
        rgba(5, 150, 105, 0.3) 80px
      ),
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 60px,
        rgba(6, 78, 59, 0.4) 60px,
        rgba(6, 78, 59, 0.4) 120px
      );
    background-size: 100% 100%;
    pointer-events: none;
  }
</style>
